<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#424242</item>


        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

        <!-- 커서 컬러-->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>


        <item name="colorOnSecondary">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!-- Customize your theme here. -->
    <style name="itemBg">
        <item name="android:background">@drawable/item_bg_night</item>
        <item name="titleTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="MyActionBarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="android:fillColor">@color/white</item>
        <item name="android:iconTint">@color/white</item>
    </style>




    <style name="customDialog">
        <item name="android:background">@drawable/dialog_background_night</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>