<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#DDDDDD</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>

        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:tint">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>




    </style>


    <style name="customDialog">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyActionBarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:tint">@color/black</item>
        <item name="android:fillColor">@color/black</item>
        <item name="android:iconTint">@color/black</item>
    </style>

        <!-- Customize your theme here. -->
        <style name="Toolbar">
            <item name="android:background">@color/white</item>
            <item name="titleTextColor">@color/black</item>
            <item name="colorControlNormal">@color/black</item>
        </style>

    <!-- Customize your theme here. -->
    <style name="itemBg">
        <item name="android:background">@drawable/item_bg_light</item>
        <item name="titleTextColor">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
    </style>


</resources>